<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/library_white"
    app:cardCornerRadius="3dp"
    android:elevation="5dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_shop_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/library_empty_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="店铺名称"
                android:textStyle="bold"
                android:textColor="@color/library_main_text_color"
                android:textSize="@dimen/font_text_size_16"/>

            <TextView
                android:id="@+id/tv_shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="店铺联系方式"
                android:textColor="@color/library_main_text_color"
                android:textSize="@dimen/font_text_size_14"/>

            <TextView
                android:id="@+id/tv_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="店铺地址"
                android:textColor="@color/library_main_text_color"
                android:textSize="@dimen/font_text_size_14"/>

        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>